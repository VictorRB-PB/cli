{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",                               
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                        
    "skipLibCheck": true,   
    "useUnknownInCatchVariables": false,                       
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
